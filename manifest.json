{
  "manifest_version": 3,
  "name": "YGGMollo",
  "version": "1.1.0",
  "description": "Ajoute un bouton télécharger via YGG-API sur les pages YGGTorrent",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "YGGMollo"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.yggtorrent.org/torrent/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "downloads"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}
